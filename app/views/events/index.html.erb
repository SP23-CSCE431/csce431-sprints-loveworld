<%= stylesheet_link_tag 'events' %>

<div class="main">
  <p style="color: green"><%= notice %></p>

  <div class="content">
    <div class="event-table">
      <div class="events">
        <div class="table-header row squish">
          <div class="col squish">Name</div>
          <div class="time-col col squish">Start/End</div>
          <div class="col squish">Description</div>
          <div class="col squish"></div>
        </div>
        <% @events.each do |event| %>
            <%= render event %>
        <% end %>
      </div>
    </div>


    <div class="calendar">
      <iframe src=<%= @calendar_url %> style="border: 0" width="600" height="425" frameborder="0" scrolling="no"></iframe> 
    </div>
  </div>


  <div class="new-event">
    <%= button_to "New event", new_event_path, method: 'get' %>
  </div>
</div>