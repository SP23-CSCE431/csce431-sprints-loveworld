<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>

    <h5>Attended Events</h5>
    <ul>
      <% user.events.each do |event| %>
        <li><%= link_to event.name, event_path(event) %></li>
      <% end %>
    </ul>

    <h5>Joined Groups</h5>
    <ul>
      <% user.groups.each do |group| %>
        <li><%= link_to group.name, group_path(group) %></li>
      <% end %>
    </ul>

    <p>
      <%= link_to "Show this user", user %>
    </p>

    <hr>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
