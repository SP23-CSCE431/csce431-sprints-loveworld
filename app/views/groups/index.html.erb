<%= stylesheet_link_tag 'groups' %>

<div class="main" >
  <div class="content">
    <div class="group-table">
      <div class="groups">
        <div class="table-header row">
          <div class="col">Name</div>
          <div class="col">Description</div>
          <div class="action-col">Show</div>
          <div class="action-col">Action</div>
        </div>
        <% @groups.each do |group| %>
          <%= render group %>
        <% end %>
      </div>
    </div>
    
  </div>
  <div class="new-group">
      <%= button_to "New group", new_group_path, method: "get" %>
    </div>
</div>

