<%= stylesheet_link_tag 'groups' %>
<div class="main">
  <h1 class="extra-spacer">Group Details</h1>
  <div class="content">
    <div class="group-table">
      <div class="groups">
        <div class="table-header row">
          <div class="col fill">Name</div>
          <div class="col fill">Description</div>
        </div>
        <div class="table-row table-cream row">
          <div class="col fill">
            <%= @group.name %>
          </div>
          <div class="col fill">
              <%= @group.description %>
          </div>
        </div>
      </div>

    </div>

  </div>

  <div class="row py-2 extra-spacer">
      <% if @users.empty? %>
        <h3> No members in group </h3>
      <% else %>
        <h3>Members:</h3>
        <div id="users">
          <% @users.each do |user| %>
            <h6><%= user.full_name %></h6>
          <% end %>
        </div>
      <% end %>
    </div>

  <div class="extra-spacer">
    <%= link_to "Edit this group", edit_group_path(@group) %> |
    <%= link_to "Back to group", groups_path %>
    <%= button_to "Destroy this group", @group, method: :delete %>
  </div>

</div>
